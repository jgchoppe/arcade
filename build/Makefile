DIRCORE	=	../

DIRGRAPHIC	=	../src/Lib/Graphic/

DIRGAMES	=	../src/Games/

all:
	@make --no-print-directory -C $(DIRCORE)
	@make --no-print-directory -C $(DIRGAMES)
	@make --no-print-directory -C $(DIRGRAPHIC)

clean:
	@make clean --no-print-directory -C $(DIRCORE)
	@make clean --no-print-directory -C $(DIRGAMES)
	@make clean --no-print-directory -C $(DIRGRAPHIC)

fclean:
	@make fclean --no-print-directory -C $(DIRCORE)
	@make fclean --no-print-directory -C $(DIRGAMES)
	@make fclean --no-print-directory -C $(DIRGRAPHIC)

re:
	@make re --no-print-directory -C $(DIRCORE)
	@make re --no-print-directory -C $(DIRGAMES)
	@make re --no-print-directory -C $(DIRGRAPHIC)